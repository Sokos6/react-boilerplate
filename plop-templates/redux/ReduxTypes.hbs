export const createFromCall = (call, suffix) => call + '_' + suffix;

const PREFIX = '{{name}}/';

export const CALLS = {
    GET_ITEMS: PREFIX + 'GET_ITEMS',
};

export const GET_ITEMS = CALLS.GET_ITEMS;
export const GET_ITEMS_SUCCESS = createFromCall(CALLS.GET_ITEMS, 'SUCCESS');
export const GET_ITEMS_FAIL = createFromCall(CALLS.GET_ITEMS, 'FAIL');

/** App handlers */
export const RESET_ERROR = PREFIX + 'RESET_ERROR';

export default {
    GET_ITEMS: GET_ITEMS,
    GET_ITEMS_SUCCESS: GET_ITEMS_SUCCESS,
    GET_ITEMS_FAIL: GET_ITEMS_FAIL,
    RESET_ERROR: RESET_ERROR,
};
